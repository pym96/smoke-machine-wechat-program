/* pages/index/index.wxss */
#body {
	margin: 0;
	background-color: rgb(246, 248, 249);
	height: 100vh;
	width: 100vw;

	padding-top: 30px;
	box-sizing: border-box;
}


.top-bar {
	position: relative;


	height: 30px;
	line-height: 30px;
	color: #000;
	padding-left: 30px;

	font-size: 16px;
	font-weight: 600;

	margin-bottom: 10px;
}

#add-button {

	position: absolute;
	left: 285px;
	top: 0px;

	width: 87px;
	height: 29px;
	padding: 2px 2px 2px 2px;
	border-radius: 30px;
	border: 1px solid #679bf5;
	background-color: #ffffff;
	box-sizing: border-box;

	color: #3d567e;
	font-size: 12px;
	line-height: 25px;
}

#device-label-list {
	color: #000;

	position: relative;


	padding: 10px;

	font-size: 16px;

	margin-bottom: 10px;
}

.device-label {
	/* position: relative;
	background-color: #fff;
	height: 50px;
	padding: 10px;

	border: solid 1px rgb(237, 239, 240);

	border-radius: 10px; */
	position: relative;

	margin: auto;

	width: 357px;
	height: 84px;
	padding: 2px 2px 2px 2px;
	border-radius: 20px;
	border: 1px solid #679bf5;
	background-color: #679bf5;
	box-sizing: border-box;

	margin-bottom: 10px;
}

.device-label image {
	position: absolute;

	left: 13px;
	top: 15px;

	width: 54px;
	height: 54px;


	border-radius: 5px;
	border: 1px solid rgba(255, 255, 255, 0);
	background-color: rgba(103, 155, 245, 0);
	box-sizing: border-box;
}

.device-label text {
	position: absolute;

	left: 84px;
	top: 35px;

	width: 103px;
	height: 17px;

	background-color: rgba(255, 255, 255, 0);
	box-sizing: border-box;
	font-family: "Arial", sans-serif;
	color: #ffffff;
	text-align: left;
	line-height: normal;

	font-size: 15px;
}

.device-label button {
	position: absolute;

	left: 264px;
	top: 28px;

	width: 76px;
	height: 29px;

	padding: 2px 2px 2px 2px;
	border-radius: 30px;
	border: 1px solid #ffffff;
	background-color: #ffffff;
	box-sizing: border-box;

	color: #3d567e;
	font-size: 13px;
	line-height: 25px;
}